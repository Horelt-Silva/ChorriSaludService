@inherits LayoutComponentBase
@page "/spinner"
<div class="div-spinner">
    <div class="spinner-border text-success" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<style>
    .div-spinner {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100vh;
        position: relative;
    }

    .spinner-border {
        position: absolute;
        left: 50%;
        top: 50%;
    }
</style>
